{
    "name": "shopflow/project-management",
    "description": "ShopFlow - E-Commerce Project Management System",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=8.2",
        "slim/slim": "^4.12",
        "slim/psr7": "^1.6",
        "doctrine/orm": "^2.17",
        "doctrine/dbal": "^3.7",
        "monolog/monolog": "^3.5",
        "firebase/php-jwt": "^6.9",
        "vlucas/phpdotenv": "^5.6",
        "symfony/cache": "^6.4",
        "predis/predis": "^2.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "friendsofphp/php-cs-fixer": "^3.45",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "ShopFlow\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ShopFlow\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "cs-fix": "php-cs-fixer fix src",
        "analyse": "phpstan analyse src --level=8",
        "security-check": "@php -r \"echo 'Security check placeholder\\n';\""
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
